<%- include ('include/header'); %>
<%- include ('include/navigation_bar'); %>
  
<div id="first-div" class="container">
  <!-- put body here -->
  <div class="index-body container">
    <!-- sign in starts here -->
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Login</div>

      <div class="card-body">
        <form method="post" id="login_form" action="" class="">
          <!-- email -->
          <div class="form-group">
            <div class="form-label-group">
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Name@example.com"
                value="<%= session.email %>"
                autofocus
              />
              <label for="email" class="text-capitalize">Email address</label>
            </div>
          </div>

          <!-- password -->
          <div class="form-group">
            <div class="form-label-group">
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Password"
              />
              <label for="password" class="text-capitalize">Password</label>
            </div>
          </div>

          <!-- button -->
          <button
            type="submit"
            class="btn btn-primary btn-block"
            name="login_button"
            value="login_button"
          >
            LOGIN
          </button>
        </form>
        <!-- form ends here -->
      </div>

      <div class="text-center">
        <a class="d-block small mt-3 text-capitalize" href="/account/signup"
          >Register an Account</a
        >
        <a class="d-block small text-capitalize" href="/setting/forget_password"
          >Forgot Password?</a
        >
      </div>
    </div>
  </div>
</div>

<%- include ('include/footer_section'); %> 
<%- include ('include/footer'); %>
